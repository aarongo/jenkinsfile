#!/usr/bin/env groovy

pipeline {
    agent any
        parameters {
            string(
                name: 'Path',
                defaultValue:"/home/pencillr/builds/",
                description: "Where to put the build!")
    }
    stages {
        stage("build") {
            steps {
                script {
                    build(job: "builder-job",
                        parameters:
                        [string(name: 'Path', value: "${params.Path}")])
                }
            }
        }
    }
}