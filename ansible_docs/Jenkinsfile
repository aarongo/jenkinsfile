#!/usr/bin/env groovy

pipeline {
    agent any
        parameters {
            string(
                name: 'url',
                defaultValue:"",
                description: "Where to put the url")
    }
    stages {
        stage ('检测是否可以连接外网') {
            steps {
                ansiColor('xterm'){
                ansiblePlaybook(
                    playbook: '/Users/lonny/Documents/Ansible_Book/playbooks/pipeline_yml/ping.yml',
                    inventory: '/Users/lonny/Documents/Ansible_Book/playbooks/inventory/hosts',
                    extras: "-e check_url='${params.url}'",
                    colorized: true
                )
                }
            input '是否继续?'
            }
        }
    }
}